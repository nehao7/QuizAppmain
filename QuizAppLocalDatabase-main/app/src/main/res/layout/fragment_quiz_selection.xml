<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".fragments.QuizSelectionFragment">

    <TextView
        android:id="@+id/tvQuizGame"
        style="@style/white20Normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/quiz_text_view_shape"
        android:gravity="center"
        android:paddingVertical="@dimen/dp_8"
        android:layout_marginStart="@dimen/dp_10"
        android:text="@string/quiz"
        android:layout_marginEnd="@dimen/dp_10"
        app:layout_constraintBottom_toTopOf="@+id/tvWordPuzzleGame"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvWordPuzzleGame"
        style="@style/white20Normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_20"
        android:background="@drawable/quiz_text_view_shape"
        android:gravity="center"
        android:paddingVertical="@dimen/dp_8"
        android:text="@string/word_puzzle"
        app:layout_constraintBottom_toTopOf="@+id/llBottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />




</LinearLayout>